{
    "manifest_version": 2,
    "name": "Prisc!",
    "version": "0.0.2",
    "description": "「プリスク！」はワンクリックでブラウザ画面スクリーンショットを撮るソフトウェアです。最低限の編集もできます。",
    "permissions" : [
        "activeTab",
        "downloads"
    ],
    "icons" : {
        "48"  : "asset/img/icon/icon.48.png",
        "128" : "asset/img/icon/icon.128.png"
    },
    "browser_action": {
        "default_icon": "asset/img/icon/icon.128.png"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "build/app.js"
        ]
    }
}
